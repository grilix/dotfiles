#!/usr/bin/env bash

if [ -z "$1" ]; then
  WORKDIR="${HOME}"
else
  WORKDIR=$(readlink -e $1)
  if [ -z "$WORKDIR" -o ! -d "$WORKDIR" ]; then
    echo "ERROR: Not a directory: $1" >&2
    exit 1
  fi
fi

RCFILE="${WORKDIR}/.tmuxrc"

NAME=$(basename ${WORKDIR})

new-session() {
  tmux new-session -s "$1" -c "$2" -d
}

attach() {
  tmux attach
}

if [ -f "${RCFILE}" ]; then
  . "${RCFILE}"
fi

new-session "${NAME}" "${WORKDIR}"

if [ "$TMUX" = "" ]; then
  attach
fi
